{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "lib": ["dom", "ES2020"],
    "outDir": "dist",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
